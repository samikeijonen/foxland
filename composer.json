{
  "name": "seravo/wordpress",
  "type": "project",
  "license": "MIT",
  "description": "Wordpress with good configs",
  "homepage": "https://seravo.fi",
  "authors": [
    {
      "name": "Onni Hakala",
      "email": "onni@seravo.fi",
      "homepage": "https://github.com/onnimonni"
    }
  ],
  "keywords": [
    "wordpress", "composer", "wp"
  ],
  "config": {
    "preferred-install": "dist",
    "generate-salts": true
  },
  "autoload": {
    "psr-0": {"Wordpress\\Installer": "scripts"}
  },
  "scripts": {
    "post-install-cmd": [
    "Wordpress\\Installer::symlinkContent"
    ],
    "post-update-cmd": [
    "Wordpress\\Installer::symlinkContent"
    ]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://languages.koodimonni.fi"
    }
  ],
  "require": {
    "php": ">=5.3.2",
    "johnpbloch/wordpress": "*",
    "composer/installers": "v1.0.12",
    "koodimonni-language/fi": "*", 

    "seravo/seravo-plugin": "^1.3"
  },
  "extra": {
    "installer-paths": {
      "htdocs/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "htdocs/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "htdocs/wp-content/themes/{$name}": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "htdocs/wordpress",
    "wordpress-languages-dir": "htdocs/wp-content/languages"
  }
}
